<tryton>
    <data>
         <!-- product.barcode -->
        <record model="ir.ui.view" id="product_barcode_view_form">
            <field name="model">product.code</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Product Codes" col="6">
                    <label name="barcode"/>
                    <field name="barcode"/>
                    <label name="number"/>
                    <field name="number"/>
                    <label name="sequence"/>
                    <field name="sequence"/>
                </form>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="product_barcode_view_tree">
            <field name="model">product.code</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Product Codes">
                    <field name="barcode"/>
                    <field name="number"/>
                </tree>
                ]]>
            </field>
        </record>

        <!-- product.product -->
        <record model="ir.ui.view" id="product_view_form">
            <field name="model">product.product</field>
            <field name="inherit" ref="product.product_view_form"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                    <xpath expr="/form/field[@name='code']"
                        position="after">
                        <field name="codes" colspan="6"/>
                    </xpath>
                </data>
                ]]>
            </field>
        </record>
    </data>
</tryton>
